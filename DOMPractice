	<script>
		function sun(){
			var name =document.getElementById('name').value().trim();
			var psw = document.getElementById('psw').value().trim();
			if(name !== '123'){
				alert("您的用户名有误");
			}else if(psw !== '123'){
				alert("您密码有误")；
				document.getElementById('name').setAttribute('value','');
				document.getElementById('name').setAttribute('psw',''); 
			}
		}
		
	</script>
	账号：<input type="text" value="" id="name" /> <br />
	密码: <input type="password" value="" id="psw" /> <br />
